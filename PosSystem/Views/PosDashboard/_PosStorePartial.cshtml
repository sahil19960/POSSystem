@model IEnumerable<Product>

    <ul class="pos-item-container">

        @foreach (Product product in Model)
        {
            <li class="pos-item-description">
                <img class="itemImage" src="@product.ImageUrl" asp-append-version="true" draggable="true" ondragstart="drag(event)" id=@product.ProductId 
                     title="Name: @product.ProductName Available Amount: @product.AvailableQuantity Price: @product.UnitPrice"
                     />
            </li>
        }
    </ul>
